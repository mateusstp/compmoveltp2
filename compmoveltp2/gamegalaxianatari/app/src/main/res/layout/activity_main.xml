<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/black"
    android:backgroundTint="#000000"
    android:weightSum="1">
    <!--tools:context="com.example.mateus.gameball.MainActivity" -->
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="87dp"
        android:background="@drawable/start"
        android:id="@+id/imageButtonStart"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/abc_action_bar_default_height_material"
        android:layout_weight="0.55" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:background="@drawable/exit"
        android:id="@+id/imageButtonExit"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material" />
</LinearLayout>
